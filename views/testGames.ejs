<a href='/testLogout'class="btn red lighten-2 right btn-logout right">logout</a>


    <div class="row">
        <div class="col s12">
            <h5>Welcome <%-user.userName %></h5>
            <h1>Press Start</h1>
        </div>
    </div>
    <div class="row">
        <div class="col s12 m5 l5">
            <img class="img-main-page" src="/img/controller-one.png" alt="cartoon controller">
            
        </div>
        <div class="col s12 m2 l2">

            <div class="row">
                <a href="/games/testRandomGame" class="btn-large yellow lighten-4 waves-effect waves-light btn-games-random">
                    Get Random
                </a>
            </div>

            

        </div>
        <div class="col s12 m5 l5">
            <img class="img-main-page" src="/img/controller-three.png" alt="another cartoon controller">
        </div>
    </div>

    <table class="striped centered responsive-table highlight">
        <thead>
          <tr>
              <th></th>
              <th>PC</th>
              <th>Playstation</th>
              <th>Xbox</th>
              <th>Nintendo</th>
          </tr>
        </thead>

        <tbody>
            <% games.forEach(game => { %>
                <tr>
                    
                    <td><%-game.name %> | <%-game.rating %></td>


                    <td>
                        <% if (game.console === 'pcGame') { %>
                            <i class="material-icons">check_circle</i>
                        <% } %>
                    </td>

                    <td>
                        <% if (game.console === 'playstationGame') { %>
                        <i class="material-icons">check_circle</i>
                        <% } %>
                    </td>

                    <td>
                        <% if (game.console === 'xboxGame') { %>
                        <i class="material-icons">check_circle</i>
                        <% } %>
                    </td>

                    <td>
                        <% if (game.console === 'nintendoGame') { %>
                        <i class="material-icons">check_circle</i>
                        <% } %>
                    </td>
                    <td>
                        <form action="/games/testMarkDone" method="POST">
                            <input hidden value="<%-game.id %>" name="id">
                            <button type="submit" class="btn green lighten-2 waves-effect waves-light">Done</button>
                        </form>
                        
                    </td>

                </tr>
            <% }) %>
          
        </tbody>
      </table>
    <h6></h6>
